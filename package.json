{
  "name": "discord-home-server-bot",
  "version": "1.0.0",
  "description": "Discord bot for Home Assistant notifications and control",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=integration"
  },
  "keywords": [
    "discord",
    "bot",
    "home-assistant",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "sqlite3": {
      "node-gyp": "^10.3.1"
    }
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "p-queue": "^8.0.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
