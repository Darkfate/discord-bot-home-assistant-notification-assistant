# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Webhook Configuration
WEBHOOK_PORT=5000
WEBHOOK_SECRET=your_webhook_secret_here

# Database
DATABASE_PATH=./data/bot.db

# Queue Configuration (optional)
QUEUE_RETRY_BASE_DELAY=60        # Base retry delay in seconds (default: 60)
QUEUE_SCHEDULER_INTERVAL=30       # Scheduler check interval in seconds (default: 30)

# Home Assistant Configuration (optional)
HA_URL=http://homeassistant.local:8123
HA_ACCESS_TOKEN=your_long_lived_access_token_here
HA_VERIFY_SSL=true               # Verify SSL certificates (default: true)
HA_TIMEOUT=10000                 # API timeout in milliseconds (default: 10000)
HA_PERMISSIONS_CONFIG=./config/ha-permissions.json  # Path to HA permissions config (default: ./config/ha-permissions.json)
