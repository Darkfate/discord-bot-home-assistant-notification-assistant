# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Webhook Configuration
WEBHOOK_PORT=5000
WEBHOOK_SECRET=your_webhook_secret_here

# Database
DATABASE_PATH=./data/bot.db

# Queue Configuration (optional)
QUEUE_RETRY_BASE_DELAY=60        # Base retry delay in seconds (default: 60)
QUEUE_MAX_RETRIES=3               # Default max retries for notifications (default: 3)
QUEUE_SCHEDULER_INTERVAL=30       # Scheduler check interval in seconds (default: 30)
QUEUE_CLEANUP_DAYS=90             # Delete sent notifications after N days (default: 90)

# Logging
LOG_LEVEL=info
